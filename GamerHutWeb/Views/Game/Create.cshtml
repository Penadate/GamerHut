@model CreateGameModel

<form method="post" asp-route-operation="@ViewData["operation"]">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Game</h2>
            <hr />
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a class="btn btn-secondary" asp-controller="Game" asp-action="Index" asp-route-operation="@ViewData["operation"]" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}