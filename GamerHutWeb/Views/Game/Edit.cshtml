@model UpdateGameModel

<form method="post" asp-action="Edit" asp-route-operation="@ViewData["operation"]">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Game</h2>
            <hr />
        </div>

        <div asp-validation-summary="All"></div>
        
        <div class="mb-3">
            <label asp-for="Keyword"></label>
            <input asp-for="Keyword" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a class="btn btn-secondary" asp-controller="Game" asp-action="Index" asp-route-operation="@ViewData["operation"]" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}