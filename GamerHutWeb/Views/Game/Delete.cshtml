@model PasswordModel

<form method="post" asp-action="Delete" asp-route-id="@ViewData["Id"]" asp-route-operation="@ViewData["operation"]">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Game</h2>
            <hr />
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a class="btn btn-secondary" asp-controller="Game" asp-action="Index" asp-route-operation="@ViewData["operation"]" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}