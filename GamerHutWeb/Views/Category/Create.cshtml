@model CreateCategoryModel

<form method="post" asp-route-operation="@ViewData["operation"]">
    <input asp-for="GameId" type="hidden" value="@ViewData["GameId"]" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Category</h2>
            <hr />
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a class="btn btn-secondary" asp-controller="Category" asp-action="Index" asp-route-gameId="@ViewData["GameId"]" asp-route-operation="@ViewData["operation"]" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}